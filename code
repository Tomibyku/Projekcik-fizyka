float t;///tarcie

void TARCIE()
{
	char a;
	printf("Czy chcesz uwzglednic tarcie? (Y/N)\n");
	a=getchar();
	switch (a)
	{
	case 'y':
		printf("Wprowadz wspolczynnik tarcia:\n");
		scanf("%f",&t);
		break;
	case 'n':
		break;
	}
}

int main()
{
	printf("Program liczy przyspieszenie ciala m1 nadane przez cialo o masie m2\n");
	printf("m1 - masa ciala na stoliku\nm2 - masa obciaznika\nl - d≈Çugosc stolika\n"); ///legenda
	TARCIE();
	printf("%f",t);
	system("pause");
	return 0;
}
